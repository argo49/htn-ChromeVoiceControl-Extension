{
  "manifest_version": 2,
  "name": "ChromeVoiceControl",
  "version": "0.0.1",
  "description": "Open and close tabs using Wit.ai",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["cs.js"],
      "run_at":"document_end"
    }
  ],
  "web_accessible_resources": [
    "scripts/*.js",
    "styles/*.css",
    "images/*.*"
  ],
  "permissions" : [
    "tabs",
    "audioCapture"
  ],
  "commands": {
    "start-listening": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Toggle device microphone"
    }
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  }
}